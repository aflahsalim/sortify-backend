<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:type="MailApp">

  <Id>12345678-1234-1234-1234-123456789abc</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Sortify</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Sortify Email Classifier"/>
  <Description DefaultValue="Classify emails as spam or not spam using AI"/>
  <IconUrl DefaultValue="https://aflahsalim.github.io/sortify/icon.png"/>
  <HighResolutionIconUrl DefaultValue="https://aflahsalim.github.io/sortify/icon.png"/>

  <SupportUrl DefaultValue="https://aflahsalim.github.io/sortify/"/>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets DefaultMinVersion="1.1">
      <Set Name="Mailbox"/>
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://aflahsalim.github.io/sortify/index.html"/>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadWriteItem</Permissions>
</OfficeApp>
